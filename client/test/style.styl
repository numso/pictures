*
  font-family sans-serif

.tag
  background-color #abbbd9
  border-radius 15px
  color white
  cursor pointer
  padding 2px 10px
  margin 2px 0
  margin-right 10px
  font-size 12px
  letter-spacing 2px
  display inline-block
  min-width 20px
  min-height 12px


#demo3
  width 700px

  .container
    background #eee

    .row
      display flex

      .expr
        flex 1
        white-space nowrap
        overflow auto

        input
          width 100%

        &:hover
          background-color #ccc
          cursor pointer


#demo4
  width 700px

  .container
    background #eee
    display flex

    .expressions
      flex 1
      overflow auto

    .expr
      width 100%
      height 22px
      white-space nowrap

      input
        width 100%

      &:hover
        background-color #ccc
        cursor pointer
